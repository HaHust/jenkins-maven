pipeline {
    agent any
    tools { 
      maven 'jenkins-maven'
    }
    stages {
        stage('Checkout') {
            steps {
                git 'https://github.com/HaHust/jenkins-maven'
            }
        }
        
        stage('build') {
            steps {
                sh 'mvn clean package'
            }
        }
        
        stage('build docker') {
            steps {
                sh 'docker build -t ha/app .'
            }
        }
    }

}
