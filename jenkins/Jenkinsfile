pipeline {
    agent any
    tools { 
      maven 'jenkins-maven'
    }

    environment {
        PATH = "/usr/local/bin:$PATH"
    }

    stages {
        stage('Checkout') {
            steps {
                git 'https://github.com/HaHust/jenkins-maven'
            }
        }
        
        stage('build') {
            steps {
                sh 'mvn clean package'
            }
        }
        
        stage('build docker') {
        agent {
             docker {
                image 'docker:18.09.1-ce-rc1'
            }
        }
            steps {
                script {
                    sh 'docker build -t ha/app .'
                }
            }
        }
    }

}
